{{#each this}}
    <li class="card">
        <div class="photo-card">
            <img src={{webformatURL}} href = {{largeImageURL}} alt={{tags}} class="photo"/>

            <div class="stats">
                <div class="stats-element">
                    <p class="stats-item">
                        <i class="material-icons">
                            <span class="material-icons md-light">thumb_up</span>
                        </i>
                    {{likes}}
                    </p>
                </div>
                
                <div class="stats-element">
                    <p class="stats-item">
                        <i class="material-icons">
                            <span class="material-icons md-light">visibility</span>
                        </i>
                    {{views}}
                    </p>
                </div>
                
                <div class="stats-element">
                    <p class="stats-item">
                        <i class="material-icons">
                            <span class="material-icons md-light">comment</span>
                        </i>
                    {{comments}}
                    </p>
                </div>
            
                <div class="stats-element">
                    <p class="stats-item">
                        <i class="material-icons">
                            <span class="material-icons md-light">cloud_download</span>
                        </i>
                    {{downloads}}
                    </p>
                </div>
            </div>
       
        </div>
    </li>
{{/each}}